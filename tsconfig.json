
{ 
  "compilerOptions": {
   "target": "esnext",
   "module": "commonjs",
   "lib": ["es2015", "es2015.promise", "es2016.array.include", "dom", "es2017"],
   "allowJs": true,
   "jsx": "react",
   "noEmit": true,
   "isolatedModules": true,
   "strict": true,
   "moduleResolution": "node",
   "baseUrl": ".",
   "paths": {
     "@src/*": ["src/*"],
   },       
   "resolveJsonModule": true,
   "allowSyntheticDefaultImports": true,
   "esModuleInterop": true,
   "skipLibCheck": false
 },
 "exclude": [
   "node_modules", "babel.config.js", "metro.config.js", "jest.config.js"
 ]
}